<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Step.StepStop"
    android:background="#F8E8B5">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="@string/step_txv1"
        android:id="@+id/textView2"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="50dp"
        android:layout_alignParentTop="true"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_toStartOf="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="13"
        android:textStyle="bold"
        android:id="@+id/txv_stepcount"
        android:textColor="#000000"
        android:layout_alignTop="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="@string/step_txv2"
        android:textStyle="bold"
        android:id="@+id/textView4"
        android:textColor="#000000"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/txv_stepcount"
        android:layout_marginStart="15dp" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="啟用"
        android:textSize="30dp"
        android:textOn="On"
        android:textOff="Off"
        android:showText="true"
        android:textStyle="bold"
        android:id="@+id/switchButton"
        android:textColor="#000000"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="200dp"
        android:layout_alignStart="@+id/textView2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/phone2"
        android:layout_below="@+id/textView4"
        android:layout_toEndOf="@+id/txv_stepcount" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_ban"
        android:src="@drawable/cross"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginTop="65dp"
        android:visibility="invisible"/>


</RelativeLayout>
